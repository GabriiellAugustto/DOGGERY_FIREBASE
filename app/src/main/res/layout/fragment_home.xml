<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80FFFFFF"
        android:orientation="vertical">


            <ImageButton
                android:id="@+id/btnchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="chat"
                android:src="@drawable/chat"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/pefcard"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#AF78E0"
                app:cardCornerRadius="70dp">

            <ImageView
                android:id="@+id/ibperfil"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:contentDescription="perfil"
                android:src="@drawable/avatarh" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Olá,"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/idnome1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" Doguinho!"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="70dp"
            android:background="#A455EB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:contentDescription="localização"
                app:boxBackgroundColor="#fff"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxStrokeColor="#090A0E">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/search_maps"
                    android:gravity="center"
                    android:hint="Minha Localização"
                    android:maxLength="100"
                    android:padding="20dp"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Ei,"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"

                android:text="Para onde vamos?"
                android:textSize="18sp" />

        </LinearLayout>

        <View
            android:layout_width="202dp"
            android:layout_height="3dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="240dp"
            android:background="#A455EB" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="280dp"
            android:orientation="vertical"
            android:gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/btndogwalker"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="#A455EB">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_margin="20dp"
                    android:background="#A455EB"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center"
                        android:contentDescription="dogwalker"
                        android:background="#A455EB"
                        android:scaleType="fitCenter"
                        android:src="@drawable/dogwalke" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="110dp"
                        android:text="DogWalkers"
                        android:textColor="#111"
                        android:textSize="20sp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <View
            android:layout_width="290dp"
            android:layout_height="3dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="500dp"
            android:background="#A455EB" />

        <HorizontalScrollView
            style="@android:style/Widget.DeviceDefault.HorizontalScrollView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="500dp"
            android:layout_marginBottom="100dp"
            android:contentDescription="scroll"
            android:gravity="center">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="500dp"
                    android:backgroundTint="#fff"
                    android:orientation="vertical"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/publiii" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#fff"
                    android:orientation="vertical"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/publii" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#fff"
                    android:orientation="vertical"
                    app:cardCornerRadius="50dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/publi" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="290dp"
            android:layout_height="3dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="700dp"
            android:background="#A455EB" />

    </FrameLayout>

</ScrollView>