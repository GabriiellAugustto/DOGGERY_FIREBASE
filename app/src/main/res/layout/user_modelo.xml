<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="200dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:backgroundTint="#AF78E0"
    android:id="@+id/cardperfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avatarh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="#AF78E0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gabriel"
                android:textColor="#111"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fonecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35988219738"
                android:textColor="#111"/>

            <TextView
                android:id="@+id/biocard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio bio bio bio bio bo "
                android:textColor="#111"/>


        </LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>
